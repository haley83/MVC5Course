@model IEnumerable<MVC5Course.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="pull-right">
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    @using (Html.BeginForm())
    {
        <input type="search" name="search" value="" placeholder="請輸入關鍵字(Alt+s)" accesskey="s" />
        <input type="submit" value="搜尋"  />
    }
</p>

<br />

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                v
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="ProductID" value="@item.ProductId" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                    @*@string.Format("{0:C0}", item.Price)*@
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Active)*@
                    @(item.Active.Value ? "啟用" : "停用")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                </td>
            </tr>
        }
        <tr>
            <td><button type="submit">刪除</button></td>
            <td></td>
            <td><a href="@Url.Action("BatchUpdate")" class="btn btn-default">更新id小於10的資料改為5元</a></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>

    </table>
}
